<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nnspace.thaismoodandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:configChanges="fontScale"
        android:hardwareAccelerated="false"
        android:icon="@drawable/thaismood_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:icon">
        <activity android:name=".GetTemporaryCredential"></activity>
        <activity android:name=".HomeActivity.Add.AddSleepActivity" />
        <activity android:name=".HomeActivity.Add.AddMoodActivity" />
        <activity android:name=".EmergencyContactActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".EvaluationHistory.EvaluationHistoryActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".HomeActivity.Diary.WriteNoteActivity" />
        <activity
            android:name=".HomeActivity.Home2"
            android:label="@string/title_activity_home2"
            android:theme="@style/NoActionBar" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/more_option" />

        <activity android:name=".EvaluationActivity.Evaluation" />
        <activity android:name=".RegisterActivity.Register" />
        <activity android:name=".MainmenuTest" />
        <activity android:name=".VerifyEmailActivity" />
        <activity android:name=".SignInOn" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>