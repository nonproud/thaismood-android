<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nnspace.thaismoodandroid"
    android:targetSandboxVersion="1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:configChanges="fontScale"
        android:hardwareAccelerated="false"
        android:icon="@drawable/thaismood_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:icon"
        android:usesCleartextTraffic="true">
        <activity android:name="com.nnspace.thaismoodandroid.Activities.SynActivity"></activity>
        <activity android:name="com.nnspace.thaismoodandroid.Activities.FIndHospitalActivity" />
        <activity android:name=".Activities.GetTemporaryCredential" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.AddSleepActivity" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.AddMoodActivity" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.EmergencyContactActivity" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.AboutActivity" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.EvaluationHistoryActivity" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.SettingActivity" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.ProfileActivity" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.WriteNoteActivity" />
        <activity
            android:name="com.nnspace.thaismoodandroid.Activities.Home2"
            android:label="@string/title_activity_home2"
            android:theme="@style/NoActionBar" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/more_option" />

        <activity android:name=".Activities.Evaluation" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.Register" />
        <activity android:name=".Activities.MainmenuTest" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.VerifyEmailActivity" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.SignInOn" />
        <activity android:name="com.nnspace.thaismoodandroid.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>