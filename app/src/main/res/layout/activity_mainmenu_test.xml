<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context=".Activities.MainmenuTest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/evaluation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evaluation"
            />
        <Button
            android:id="@+id/sign_in_onbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign IN/ON"/>
        <Button
            android:id="@+id/mainbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAIN"/>
        <Button
            android:id="@+id/otpbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP"/>
        <Button
            android:id="@+id/register_activity_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"/>

        <Button
            android:id="@+id/main2_activity_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main2"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>