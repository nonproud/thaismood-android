<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.QMDQFragment"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="582dp"
        android:layout_weight="1"
        android:background="@color/q_mdq_theme"
        android:gravity="top|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/q_mdq_header"
            android:textColor="@color/white"
            android:textSize="@dimen/fragment_header_text_size" />


        <TextView
            android:id="@+id/q_mdq_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ข้อที่ 1 จาก 15 ข้อ"
            android:textColor="@color/white"
            android:textSize="@dimen/fragment_header_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/box_border_mdq"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/q_mdq_intro_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/thsarabunnew"
                android:text="This is Question"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/q_mdq_question_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/thsarabunnew_bold"
                android:textAlignment="center"
                android:text="This is Question"
                android:textSize="28dp" />
            <TextView
                android:id="@+id/q_mdq_question_15_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="0dp"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:text="This is Question"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/q_mdq_part_1_2_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/q_mdq_choice_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:tag="1"
                    android:text="@string/q_mdq_ans_1" />

                <Button
                    android:id="@+id/q_mdq_choice_2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:tag="0"
                    android:text="@string/q_mdq_ans_2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/q_mdq_part_3_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/q_mdq_part_3_choice_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:tag="0"
                    android:text="@string/q_mdq_ans_3" />

                <Button
                    android:id="@+id/q_mdq_part_3_choice_2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:tag="1"
                    android:text="@string/q_mdq_ans_4" />

                <Button
                    android:id="@+id/q_mdq_part_3_choice_3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:tag="2"
                    android:text="@string/q_mdq_ans_5" />

                <Button
                    android:id="@+id/q_mdq_part_3_choice_4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:tag="3"
                    android:text="@string/q_mdq_ans_6" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q_mdq_prev_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawableTint="@color/ios_grey"
            android:paddingLeft="10dp"
            android:background="@drawable/button_border_unselected"
            android:drawableLeft="@drawable/ic_left"
            android:enabled="false"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ย้อนกลับ"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/q_mdq_next_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTint="@color/ios_grey"
            android:paddingRight="10dp"
            android:background="@drawable/button_border_unselected"
            android:drawableRight="@drawable/ic_right"
            android:enabled="false"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ถัดไป"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>