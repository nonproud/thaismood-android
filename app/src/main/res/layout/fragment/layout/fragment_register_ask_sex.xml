<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Register_ask_sex"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="@string/register_ask_sex_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/register_ask_sex_male_layout"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_border_unselected"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/im_male_foreground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/register_ask_sex_male"
                        android:textColor="@color/white"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register_ask_genter_female_layout"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/button_border_unselected"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/im_female_foreground"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/register_ask_sex_female"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/register_ask_sex_is_pregnant_layout"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/box_border">

                <RadioGroup
                    android:id="@+id/register_ask_sex_is_pregnant_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_ask_sex_pregnant_header"/>

                    <RadioButton
                        android:id="@+id/register_ask_sex_no_pregnant_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="0"
                        android:checked="true"
                        android:text="@string/register_ask_sex_no_pregnant"/>

                    <RadioButton
                        android:id="@+id/register_ask_sex_pregnant_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="1"
                        android:text="@string/register_ask_sex_pregnant"/>

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/confirm_color">

            <Button
                android:id="@+id/register_ask_sex_next_btn"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/button_border_unselected"
                android:fontFamily="@font/thsarabunnew_bold"
                android:text="ถัดไป"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>