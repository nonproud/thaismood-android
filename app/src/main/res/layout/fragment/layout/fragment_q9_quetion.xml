<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".Q9QuetionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/q_9q_theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:text="@string/q_9q_header"
            android:textSize="@dimen/fragment_header_text_size" />

        <TextView
            android:id="@+id/q_9q_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="ข้อที่ 1 จาก 9 ข้อ"
            android:textSize="@dimen/fragment_header_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/box_border_9q"
            android:padding="20dp">

            <TextView
                android:id="@+id/q_9q_question_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="This is Question"
                android:textSize="@dimen/question_text_size" />

            <Button
                android:id="@+id/q_9q_choice_1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/q_9q_choice_unselected"
                android:layout_marginTop="50dp"
                android:tag="0"
                android:text="@string/q_9q_ans_1" />

            <Button
                android:id="@+id/q_9q_choice_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/q_9q_choice_unselected"
                android:layout_marginTop="20dp"
                android:tag="1"
                android:text="@string/q_9q_ans_2" />

            <Button
                android:id="@+id/q_9q_choice_3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/q_9q_choice_unselected"
                android:layout_marginTop="20dp"
                android:tag="2"
                android:text="@string/q_9q_ans_3" />

            <Button
                android:id="@+id/q_9q_choice_4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/q_9q_choice_unselected"
                android:layout_marginTop="20dp"
                android:tag="3"
                android:text="@string/q_9q_ans_4" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q_9q_prev_btn"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_border_unselected"
            android:enabled="false"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ย้อนลับ"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/q_9q_next_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/button_border_unselected"
            android:enabled="false"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ถัดไป"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>

</LinearLayout>