<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    tools:context=".Fragments.Q8QustionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/q_8q_theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="@string/q_8q_header"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/q_8q_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ข้อที่ 1 จาก 8 ข้อ"
            android:textSize="@dimen/fragment_header_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="top|center_horizontal"
            android:background="@drawable/box_border_8q"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/q_8q_question_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/thsarabunnew_bold"
                android:gravity="center_horizontal"
                android:text="This is Question"
                android:textSize="30dp" />

            <Button
                android:id="@+id/q_8q_choice_1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/q_8q_choice_unselected"
                android:layout_marginTop="20dp"

                android:text="@string/q_8q_ans_1"
                android:tag="0"/>

            <Button
                android:id="@+id/q_8q_choice_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/q_8q_choice_unselected"
                android:layout_marginTop="20dp"

                android:text="@string/q_8q_ans_2"
                android:tag="1"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q_8q_prev_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawableTint="@color/ios_grey"
            android:paddingLeft="10dp"
            android:background="@drawable/button_border_unselected"
            android:drawableLeft="@drawable/ic_left"
            android:enabled="false"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ย้อนกลับ"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/q_8q_next_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTint="@color/ios_grey"
            android:paddingRight="10dp"
            android:background="@drawable/button_border_unselected"
            android:drawableRight="@drawable/ic_right"
            android:enabled="false"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ถัดไป"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>