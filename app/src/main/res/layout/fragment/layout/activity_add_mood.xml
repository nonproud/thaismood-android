<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".HomeActivity.Add.AddMoodActivity"
    android:id="@+id/add_mood_transition">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:gravity="right">

            <TextView
                android:id="@+id/add_mood_help_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:background="@drawable/btn_circle"
                android:text="\?"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_mood_header"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/add_mood_date_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/calendar"
                android:drawablePadding="10dp"
                android:editable="false"
                android:textSize="20dp"
                android:text="Date"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/add_mood_emo_violet_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/add_mood_emo_margin"
                    android:layout_marginLeft="@dimen/add_mood_emo_margin"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/add_mood_emo_violet_icon"
                        android:layout_width="@dimen/add_mood_emo_small_diment"
                        android:layout_height="@dimen/add_mood_emo_small_diment"
                        android:src="@drawable/emo_violet_blank"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_mood_text_violet"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_mood_emo_grey_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/add_mood_emo_margin"
                    android:layout_marginLeft="@dimen/add_mood_emo_margin"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/add_mood_emo_grey_icon"
                        android:layout_width="@dimen/add_mood_emo_small_diment"
                        android:layout_height="@dimen/add_mood_emo_small_diment"
                        android:src="@drawable/emo_grey_blank"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_mood_text_grey"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_mood_emo_green_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/add_mood_emo_margin"
                    android:layout_marginLeft="@dimen/add_mood_emo_margin"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/add_mood_emo_green_icon"
                        android:layout_width="@dimen/add_mood_emo_small_diment"
                        android:layout_height="@dimen/add_mood_emo_small_diment"
                        android:src="@drawable/emo_green_blank"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_mood_text_green"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_mood_emo_yellow_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/add_mood_emo_margin"
                    android:layout_marginLeft="@dimen/add_mood_emo_margin"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/add_mood_emo_yellow_icon"
                        android:layout_width="@dimen/add_mood_emo_small_diment"
                        android:layout_height="@dimen/add_mood_emo_small_diment"
                        android:src="@drawable/emo_yellow_blank"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_mood_text_yellow"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_mood_emo_red_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/add_mood_emo_red_icon"
                        android:layout_width="@dimen/add_mood_emo_small_diment"
                        android:layout_height="@dimen/add_mood_emo_small_diment"
                        android:layout_marginRight="@dimen/add_mood_emo_margin"
                        android:layout_marginLeft="@dimen/add_mood_emo_margin"
                        android:src="@drawable/emo_red_blank"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_mood_text_red"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_mood_seek_bar_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/mood_box_grey"
                android:visibility="gone">
                <TextView
                    android:id="@+id/add_mood_level_instruction_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/fragment_header_text_size"
                    android:gravity="center"
                    android:text="@string/add_mood_level_seek_scale_instruction" />

                <TextView
                    android:id="@+id/add_mood_level_mood_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="50dp"
                    android:gravity="center"
                    android:text="1" />

                <SeekBar
                    android:id="@+id/add_mood_level_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:progressDrawable="@drawable/seek_bg_yellow"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:progress="1"
                    android:min="1"
                    android:max="3" />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_mood_next_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/non_select_color"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_save"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="บันทึก"/>

    </LinearLayout>


</LinearLayout>