                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="30dp"
                            android:text="สมาคมสะมาริตันส์" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="30dp"
                            android:layout_marginTop="-18dp"
                            android:text="แห่งประเทศไทย" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="40dp"
                            android:text="02-713-6793" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:paddingStart="10dp"
                            android:gravity="right"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="20dp"
                            android:text="โทรเวลา: 12.00-22.00" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-10dp"
                            android:gravity="right"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="20dp"
                            android:text="Facebook: ตอบกลับภายใน 24 ชม." />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/samarintan_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00b248"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/smrt_call_btn"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00b248"
                                android:textColor="@color/white"
                                android:text="โทร" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:background="#00b248">

                            <Button
                                android:id="@+id/smrt_web_btn"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00b248"
                                android:textColor="@color/white"
                                android:text="web site" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:background="#00b248">

                            <Button
                                android:id="@+id/smrt_fb_btn"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00b248"
                                android:textColor="@color/white"
                                android:text="Facebook" />
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/im_samaritan_logo_cm"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:src="@drawable/samaritan"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/im_samaritan_logo_cm"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="34dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="11dp"
                        android:text="ศูนย์เชียงใหม่" />

                    <LinearLayout
                        android:id="@+id/samarintan_details_2"
                        android:layout_toRightOf="@+id/im_samaritan_logo_cm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="right"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="30dp"
                            android:text="สมาคมสะมาริตันส์" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="30dp"
                            android:layout_marginTop="-18dp"
                            android:text="แห่งประเทศไทย" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="40dp"
                            android:text="053-225-977" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:paddingStart="10dp"
                            android:gravity="right"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="20dp"
                            android:text="โทรเวลา: 19.00-22.00" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-10dp"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:gravity="right"
                            android:text="Facebook: ตอบกลับภายใน 24 ชม."
                            android:textSize="20dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/samarintan_details_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00b248"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/smrt_call_btn_2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00b248"
                                android:textColor="@color/white"
                                android:text="โทร" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:background="#00b248">

                            <Button
                                android:id="@+id/smrt_web_btn2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00b248"
                                android:textColor="@color/white"
                                android:text="web site" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="1dp"
                            android:background="#00b248">

                            <Button
                                android:id="@+id/smrt_fb_btn2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00b248"
                                android:textColor="@color/white"
                                android:text="Facebook" />
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/jet_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/thsarabunnew_bold"
                            android:textSize="30dp"
                            android:text="คลินิกสุขภาพจิตนายแพทย์เจษฎา" />






                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/jet_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:gravity="center">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
